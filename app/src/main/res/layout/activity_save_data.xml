<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE DETAILS"
        android:fontFamily="serif"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patta number"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp"
            android:layout_weight="2"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:id="@+id/PattaNumber"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:fontFamily="serif"
            android:text="LandType"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25dp" />
        <Spinner
            android:id="@+id/landspinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_weight="2">

        </Spinner>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="State"
            android:textSize="24sp"
            android:layout_margin="10dp"
            android:fontFamily="serif"

            android:layout_weight="2"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_weight="2">

        </Spinner>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="6">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="District"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="2"
                android:textSize="24dp"
                />
        <Spinner
            android:id="@+id/districtspinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"

            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_weight="2">
        </Spinner>

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:gravity="center">
        <TextView
           android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/colorPrimaryDark"
            android:text="Crop Grown :"
            android:id="@+id/crop"
            android:visibility="invisible"
            android:textSize="24dp"
            />
        <EditText
            android:id="@+id/cropname"
            android:layout_width="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:gravity="center">
        <TextView
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="2"
            android:text="Yield in Kgs :"
            android:visibility="invisible"
            android:id="@+id/yield"
            android:textSize="24dp"
            />
        <EditText
            android:id="@+id/yielddata"
            android:layout_width="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="2"/>
    </LinearLayout>
    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6">
    <ImageView
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:id="@+id/image"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="3"/>

    <ImageButton
        android:id="@+id/btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/is"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="392dp"
        android:layout_weight="3"/>
    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/savedatatodb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save the data to database"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            />


    </LinearLayout>
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>
    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>
    <Button
        android:id="@+id/proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>
  </LinearLayout>
</ScrollView>
